<!--pages/find/find.wxml-->
<view class="main">

<view class="topbox">
  <input placeholder="发现属于你的精彩" class="txt" type="text"></input>
  <view class="btn">
    <image src="/images/touming/sousuoredT(1).png"></image>
  </view>
</view>


<!--热门推荐 -->
<view class="titlebox"> 
  <view class="txt">热门推荐</view>
  <view class="txt_r" bindtap="changehot">更多</view>
</view>


<view class="hotlist clearfix" >
  <block wx:for="{{hotlist}}">
  <view class="hotitem">
    <image src="{{item.picUrl}}"></image>
    <text>{{item.name}}</text>
  </view>
</block>
</view>

<!-- 新歌列表 -->
<view class="titlebox">
  <view class="txt">新歌推荐</view>
  <view class="txt_r" bindtap="changenew">更多</view>
</view>

<view class="hotlist clearfix" >
  <block wx:for="{{newlist}}">
  <view class="hotitem" data-id="{{item.id}}" bindtap="play">
    <image src="{{item.picUrl}}"></image>
    <text>{{item.name}}</text>
  </view>
</block>
</view>

</view>