/* 滑块组件  */
.main{
  width: 100%;
  height: 850rpx;
  /* background: pink; */
  position: relative;
}



.imgitem image{
  width: 450rpx;
  height: 450rpx;
  border-radius: 50%;
  border:70rpx solid #333;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  animation: playimg 20s linear infinite;
  box-shadow: 3rpx  3rpx  10rpx black;
}


 /* 动画暂停状态  */
 .imgitem .clear{  
  animation-play-state: paused;
 } 

/* 旋转 */
@keyframes playimg{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}

